# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/baitkart
MONGODB_TEST_URI=mongodb://localhost:27017/baitkart_test

# Authentication
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Email (using SendGrid as an example)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@baitkart.com
EMAIL_FROM_NAME=Baitkart

# AWS (for file uploads and other AWS services)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=baitkart-uploads

# Payment (using Stripe as an example)
PAYSTACK_SECRET_KEY=your_paystack_secret_key_here
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_WEBHOOK_SECRET=your_coinbase_webhook_secret_here

# Redis (for caching and session management)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Feature flags
ENABLE_USER_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false

# Third-party integrations
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_API_KEY=your_algolia_api_key

# Crypto
CRYPTO_SECRET_KEY=your_very_long_and_secure_crypto_secret_key_here

# Social login
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Push notifications
FIREBASE_SERVER_KEY=your_firebase_server_key

# Geocoding (using Google Maps as an example)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Maintenance
MAINTENANCE_MODE=false

# Performance
CLUSTER_MODE=false
MAX_CLUSTER_INSTANCES=4

# Monitoring
SENTRY_DSN=your_sentry_dsn

# Internationalization
DEFAULT_LANGUAGE=en

# Marketplace specific
COMMISSION_RATE=0.10
MIN_WITHDRAWAL_AMOUNT=50
MAX_PRODUCT_IMAGES=5
